<% if(recipe != null) {%>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/" class="category__link">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">
      <%= recipe.name %>
    </li>
  </ol>
</nav>


<div class="row">

    <div class="col-12 col-md-4">
        <img src="/uploads/<%= recipe.image %>" alt="<%= recipe.name %> image" class="img-fluid sticky-top recipe__img" style="top: 20px" loading="lazy" >
    </div>

    <div class="col-12 col-md-8">
         
        <div class="row">
            <div class="col-12"><h1><%= recipe.name %></h1></div>
            <div class="col-12 mb-4"><i class="bi bi-tag"></i> <%= recipe.category %></div>
            <div class="col-12" style="white-space: pre-line;">
                <h4>Cooking Instructions</h4>
                <%= recipe.description %>
            </div>
        </div>

        <div class="row pt-4">
            <div class="col-12">
                <h4>Ingredients</h4>
                <ul class="list-group list-group-flush">
                    <% for(ingredient of recipe.ingredients) { %>

                      <li class="list-group-item"><%= ingredient %></li> 
                        
                        
                    <% } %>
                </ul>
            </div>
        </div>
   <div class="container d-flex gap-4 mt-4">
        <form action="/categories/<%= recipe.id %>/update" method="get" >
            <button class="btn btn-secondary btn-lg" type="submit">Update</button>
        </form>
        <form action="/categories/<%= recipe.id %>?_method=DELETE" method="POST" >
            <button class="btn btn-danger btn-lg" type="submit" disabled>Delete</button>
        </form>
</div>
    </div>



</div>

<% } else { %>

    <h1 style="color: red;">No item found!</h1>

<% } %>
