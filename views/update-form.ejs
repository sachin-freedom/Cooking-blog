<div class="px-4 py-5 my-5 text-center">
  <h1 class="display-5 fw-bold">Update Your Recipe</h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead">
      Share your amazing recipes with thousands of web developers across the
      world. Fill our form to get started.
    </p>
  </div>
</div>

<div class="row justify-content-center">

  <div class="col-8">
    <form action="/categories/<%= id %>?_method=PUT" enctype="multipart/form-data" method="POST">
      <div class="row g-3">
        <div class="col-12">
          <label for="email" class="form-label">Email</label>
          <input type="email" name="email" id="email" class="form-control" value="<%= recipe.email %>"/>
        </div>

        <div class="col-12">
          <label for="name" class="form-label">Recipe Name</label>
          <input type="text" name="name" id="name" class="form-control" value="<%= recipe.name %>" />
        </div>

        <div class="col-12 mt-2">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="description"
            id="description"
            class="form-control"
            cols="30"
            rows="4"
          ><%= recipe.description %></textarea>
        </div>

        <div class="col-12">
          <label for="ingredients" class="form-label">Ingredients</label>
          <small>Example: Ice</small>
          <div class="ingredientList">
            <div class="ingredientDiv mb-1">
                <% for(ingredient of recipe.ingredients){ %>
              <input type="text" name="ingredients" class="form-control" value="<%= ingredient %>"/>
              <% } %>
            </div>
          </div>
        </div>
      </div>

      <div class="col-12 mt-3">
        <button
          type="button"
          class="btn btn-outline-primary"
          id="addIngredientsBtn"
        >
          +Ingredients
        </button>
      </div>

      <div class="col-12 mt-3">
        <label for="category">Select Category</label>
        <select
          name="category"
          id=""
          class="form-select form-control"
          aria-label="Category"
        >
          <option selected>Select Category</option>
         <option value="Thai" <%= recipe.category === 'Thai' ? 'selected' : '' %>>Thai</option>
          <option value="American" <%= recipe.category === 'American' ? 'selected' : '' %>>American</option>
          <option value="Chinese" <%= recipe.category === 'Chinese' ? 'selected' : '' %>>Chinese</option>
          <option value="Mexican" <%= recipe.category === 'Mexican' ? 'selected' : '' %>>Mexican</option>
          <option value="Indian" <%= recipe.category === 'Indian' ? 'selected' : '' %>>Indian</option>
        </select>
      </div>

      <div class="col-12 mt-3">
        <label for="image">Recipe Image</label>
        <input type="file" class="form-control" name="image" accept="image/*" src="uploads/<%= recipe.image  %>" />
         
      </div>

      <div class="col-12 mt-3">
        <button type="submit" class="btn btn-primary">Update Recipe</button>
      </div>
    </form>
  </div>
</div>
