<h1 class="pb-4">Explore Categories</h1>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/" class="category__link">Home</a></li>
    <li class="breadcrumb-item"><a href="/categories">Categories</a></li>
    <li class="breadcrumb-item active" aria-current="page">
      <% if(locals.categoryById) { %>
         
        <%= categoryById[0].category %>

        <% } else {%>

          Explore Categories

          <% } %>
    </li>
  </ol>
</nav>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3 mb-4">
  <% if(typeof categories !== 'undefined' && categories.length>0) {%> <% for(let category of categories) {%>
  <a
    href="/categories/<%= category.name %>"
    class="col tex-center category__link"
  >
    <div class="category__img shadow">
      <img src="/img/<%= category.image %>" alt="American Food" loading="lazy" />
    </div>
    <div class="pt-1"><%= category.name %></div>
  </a>

  <% } %> <% } %>
</div>


<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
    <% if(typeof categoryById !== 'undefined' && categoryById.length>0) {%> <% categoryById.forEach(function(recipe, index) { %>
    <a href="/recipe/<%= recipe.id %>" class="col tex-center category__link">
      <div class="category__img category__img--large shadow">
        <img
          src="/uploads/<%= recipe.image %>"
          alt="<%= recipe.name %>"
          loading="lazy"
        />
      </div>
      <div class="pt-1"><%= recipe.name %></div>
    </a>
    <% }) %> <% } %>
  </div>
