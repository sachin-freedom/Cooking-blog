<% if(recipes != null) {%>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/" class="category__link">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">
      <%= recipes.name %>
    </li>
  </ol>
</nav>


<div class="row">

    <div class="col-12 col-md-4">
        <img src="/uploads/<%= recipes.image %>" alt="<%= recipes.name %> image" class="img-fluid sticky-top recipe__img" style="top: 20px" loading="lazy" >
    </div>

    <div class="col-12 col-md-8">
         
        <div class="row">
            <div class="col-12"><h1><%= recipes.name %></h1></div>
            <div class="col-12 mb-4"><i class="bi bi-tag"></i> <%= recipes.category %></div>
            <div class="col-12" style="white-space: pre-line;">
                <h4>Cooking Instructions</h4>
                <%= recipes.description %>
            </div>
        </div>

        <div class="row pt-4">
            <div class="col-12">
                <h4>Ingredients</h4>
                <ul class="list-group list-group-flush">
                    <% for(ingredient of recipes.ingredients) { %>

                      <li class="list-group-item"><%= ingredient %></li> 
                        
                        
                    <% } %>
                </ul>
            </div>
        </div>

    </div>



</div>

<% } else { %>

    <h1 style="color: red;">No item found!</h1>

<% } %>
